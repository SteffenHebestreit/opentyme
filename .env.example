# Environment Variables Template - Project Tracking System

# Copy this file to .env and fill in your actual values.
# Do not commit sensitive information to version control.

# ==================================================
# Backend Configuration
# ==================================================

# Server Settings
BACKEND_PORT=8000
BACKEND_HOST=localhost
NODE_ENV=development  # or production

# Security
BACKEND_SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET=your-jwt-secret-here-change-this-in-production
JWT_EXPIRES_IN=7d  # Token expiration (e.g., 1h, 7d, 30d)

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/tyme_db

# For development with Docker Compose:
# DATABASE_URL=postgresql://postgres:password@db:5432/tyme

# Email Settings (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Optional - Use a service like SendGrid, Mailgun, etc.
EMAIL_FROM=noreply@yourdomain.com

# ==================================================
# Frontend Configuration
# ======================================

# Server Settings
FRONTEND_PORT=3000
FRONTEND_HOST=localhost

# API Base URL for frontend to communicate with backend
API_BASE_URL=http://localhost:8000/api

# Environment specific settings (development, staging, production)
VITE_APP_ENVIRONMENT=development  # or production

# ==================================================
# Development Settings
# ==================================================

# Debug mode - enable verbose logging
DEBUG=true

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # max requests per window

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==================================================
# Production Settings (when deploying)
# ==================================================

# When in production, ensure you set:
# NODE_ENV=production
# DEBUG=false

# Use HTTPS in production
API_BASE_URL=https://yourdomain.com/api

# Enable compression for better performance
COMPRESSION_ENABLED=true

# Database connection pooling settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# Cache Configuration (Redis recommended)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600  # seconds

# File Upload Settings
MAX_FILE_SIZE_MB=5
ALLOWED_UPLOAD_TYPES=image/jpeg,image/png,application/pdf

# ==================================================
# Third-Party Services Configuration
# ==================================================

# Payment Gateway (e.g., Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Cloud Storage (for file uploads, if needed)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# Analytics Tracking (e.g., Google Analytics)
GA_TRACKING_ID=

# ==================================================
# Backup & Monitoring
# ==================================================

# Database backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Monitoring and alerting services
SENTRY_DSN=https://your-sentry-dsn
NEW_RELIC_APP_NAME=tyme
NEW_RELIC_LICENSE_KEY=

# ==================================================
# End of Environment Variables Template
# ==================================================

# Notes:
# - All variables prefixed with VITE_ will be exposed to the frontend in production builds.
# - Never commit your actual .env file to version control.
# - Use a .gitignore file to exclude .env from being tracked.
