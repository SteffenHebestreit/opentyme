{
  "name": "tyme-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Frontend application for tyme - Time Tracking & Invoicing System",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit",
    "test:unit": "jest --runInBand",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:coverage": "npm run test:unit -- --coverage",
    "pretest:ui": "npm run build",
    "test:ui": "playwright test",
    "test:ui:headed": "npm run build && playwright test --headed --project=chromium",
    "test:ui:install": "playwright install --with-deps",
    "test:all": "npm run test:unit && npm run test:ui",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.2",
    "@tanstack/react-query": "^5.69.2",
    "axios": "^1.7.9",
    "chart.js": "^4.5.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "keycloak-js": "^26.2.1",
    "lucide-react": "^0.469.0",
    "pdfmake": "^0.2.20",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-i18next": "^16.1.0",
    "react-router-dom": "^7.9.4",
    "tailwindcss": "^3.4.18",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.1",
    "@types/pdfmake": "^0.2.12",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "patch-package": "^8.0.0",
    "postcss": "^8.5.1",
    "ts-jest": "^29.4.4",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3",
    "vite": "^5.4.11"
  },
  "engines": {
    "node": ">=16.x"
  }
}
