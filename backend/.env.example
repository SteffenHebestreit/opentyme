# Backend Environment Variables - Development

# Server Settings
PORT=8000
NODE_ENV=development
HOST=localhost

# Frontend URL for redirects and password reset links
FRONTEND_URL=http://localhost:5173

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET=your-jwt-secret-here-change-this-in-production
JWT_EXPIRES_IN=7d

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/tyme_db
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Email Settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@yourdomain.com

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100   # max requests per window

# Logging
LOG_LEVEL=info
DEBUG=true

# File Upload Settings
MAX_FILE_SIZE_MB=5
ALLOWED_UPLOAD_TYPES=image/jpeg,image/png,application/pdf

# API Configuration
API_VERSION=v1
HEALTH_CHECK_PATH=/api/health

# Invoice Settings
DEFAULT_CURRENCY=USD
DEFAULT_TAX_RATE=0.00
INVOICE_PREFIX=TY-  # Prefix for invoice numbers (e.g., TY-0001)

# Company Information
COMPANY_NAME=
COMPAN Address:
COMPANY_EMAIL=
COMPANY_PHONE=

# Development Settings only
DATABASE_LOGGING=false  # Set to true to see SQL queries in development

# Production settings would typically include these:
# COMPRESSION_ENABLED=true
# SENTRY_DSN=your-sentry-dsn-here
